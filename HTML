<div id="productPage" class="product-page"></div>

<!-- رسالة نجاح -->
<div id="success" class="success">تم تنفيذ الطلب وسيتم التواصل معك فوراً ❤️</div>

<script>
const PRODUCTS = [
    { name: "Boot 1", price: 650, image: "FB_IMG_1763597467995.jpg" },
    { name: "Boot 2", price: 700, image: "FB_IMG_1763597474017.jpg" },
    { name: "Boot 3", price: 580, image: "FB_IMG_1763597558020.jpg" },
    { name: "Boot 4", price: 620, image: "FB_IMG_1763597576686.jpg" }
];

const home = document.getElementById("home");
const productPage = document.getElementById("productPage");
const success = document.getElementById("success");

function loadProducts() {
    PRODUCTS.forEach((p, i) => {
        home.innerHTML += `
            <div class="product" onclick="openProduct(${i})">
                <img src="${p.image}" alt="">
                <div class="product-info">${p.name} - ${p.price} جنيه</div>
            </div>
        `;
    });
}

function openProduct(i) {
    const p = PRODUCTS[i];
    home.style.display = "none";
    productPage.style.display = "block";
    success.style.display = "none";

    productPage.innerHTML = `
        <button class="back-btn" onclick="goBack()">رجوع</button>
        <img class="single-img" src="${p.image}" />
        <div class="details">
            <p><b>${p.name}</b></p>
            <p>السعر: ${p.price} جنيه</p>

            <label>اللون:</label>
            <select id="color">
                <option>أسود</option>
                <option>نبيتي</option>
                <option>بيج</option>
                <option>بني</option>
            </select>

            <label>المقاس:</label>
            <select id="size">
                <option>37</option>
                <option>38</option>
                <option>39</option>
                <option>40</option>
                <option>41</option>
            </select>

            <label>الاسم:</label>
            <input id="uname" placeholder="اسمك">

            <label>العنوان:</label>
            <input id="address" placeholder="عنوانك">

            <label>رقم التواصل:</label>
            <input id="phone" placeholder="رقمك">

            <label>علامة مميزة:</label>
            <input id="mark" placeholder="علامة قريبة من العنوان">

            <label>سعر الشحن ثابت: 50 جنيه</label>

            <button class="order-btn" onclick="submitOrder(${i})">طلب الآن</button>
        </div>
    `;
}

function goBack() {
    productPage.style.display = "none";
    home.style.display = "grid";
}

function submitOrder(i) {
    success.style.display = "block";
    productPage.style.display = "none";

    // هنا ممكن نضيف إرسال الطلب لواتساب أو تليجرام لاحقاً
}

loadProducts();
</script>

</body>
